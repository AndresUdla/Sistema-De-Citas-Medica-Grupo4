<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Médico</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">Médico</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="Horarios" asp-action="Index">Horarios</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Citas" asp-action="Index">Citas</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer class="footer bg-primary text-white text-center py-3">
        &copy; 2025 - Sistema De Citas Médicas - Médico
    </footer>
</body>
</html>
