<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administrador</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="layout-administrador">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Administrador</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Pacientes" asp-action="Index">Pacientes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Medicos" asp-action="Index">Medicos</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Citas" asp-action="IndexCitaAdministrador">Citas</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Administradores" asp-action="Index">Mi Perfil</a></li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a asp-controller="Login" asp-action="Login" class="btn btn-outline-danger">Cerrar Sesión</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        @RenderBody()
    </div>
    <footer class="footer bg-dark text-light text-center py-3">
        &copy; 2025 - Sistema De Citas Médicas - Administrador
    </footer>
    @RenderSection("Scripts", required: false)

</body>
</html>
