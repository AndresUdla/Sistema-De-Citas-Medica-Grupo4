@model IEnumerable<Sistema_De_Citas_Medicas.Models.Cita>

@{
    ViewData["Title"] = "Citas";
    Layout = "~/Views/Shared/LayaoutMedico.cshtml";
}

<h1>Citas</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FechaCita)</th>
            <th>@Html.DisplayNameFor(model => model.Paciente.Nombres)</th>
            <th>@Html.DisplayNameFor(model => model.Horario.Dia)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FechaCita)</td>
                <td>@Html.DisplayFor(modelItem => item.Paciente.Nombres)</td>
                <td>@Html.DisplayFor(modelItem => item.Horario.Dia)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CitaId">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
